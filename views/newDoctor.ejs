<%- include('partials/header'); -%>

  <div class="main-content2">
    <div class="col-md-12 order-md-1 new-doctor">
      <h2 class="mb-3 title ">Add a new Doctor</h2>

      <form class="needs-validation" action="/newDoctor" method="post">


        <div class="row">
          <div class="column">
            <div class="card p-4 py-3 text-center">
              <h3><i class="fa-solid fa-user blue"></i></h3>
              <h3>Personal details</h3>

              <label for="fName">First name*</label>
              <input type="text" class="form-control" id="fName" name="fName" placeholder="" value="" autocomplete="off"
                required>


              <label for="lName">Last name*</label>
              <input type="text" class="form-control" id="lName" name="lName" placeholder="" value="" autocomplete="off"
                required>



              <label for="address">Address*</label>
              <input type="text" class="form-control" id="address" name="address" placeholder="" value=""
                autocomplete="off" required>





              <label for="dateOfBirth">Date Of Birth*</label>
              <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" autocomplete="off"required>



              <label for="sex">Sexe*</label><br>
              <select name="sex" id="sex">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>



              <label for="phoneNumber">Contact Number*</label>
              <input type="number" class="form-control" id="phoneNumber" name="phoneNumber"
                placeholder="Enter the doctor's phone number" autocomplete="off" required>




            </div>

          </div>
          <div class="column">
            <div class="card p-4 py-3 text-center">
              <h3><i class="fa-solid fa-school"></i></h3>
              <h3>Education Details</h3>

              <label for="fName">School Attended*</label>
              <input type="text" class="form-control" id="schoolAttended" name="schoolAttended" placeholder="" value=""
                autocomplete="off" required>


              <label for="lName">Degree Held*</label>
              <input type="text" class="form-control" id="degreeHeld" name="degreeHeld" placeholder="" value=""
                autocomplete="off" required>







              <label for="dateOfBirth">License*</label>
              <input type="text" class="form-control" id="license" name="license" autocomplete="off" required>







              



              <label for="speciality">Area Of Experties*</label>

              <input type="text" list="specialities" class="form-control " name="speciality" placeholder=""
                autocomplete="off" required>
              <datalist id="specialities">
                <option value="Surgery">
                <option value="Allergy and immunology">
                <option value="Anesthesiology">
                <option value="Dermatology">
                <option value="Diagnostic radiology">
                <option value="Emergency medicine">
                <option value="Family medicine">
                <option value="Internal medicine">
                <option value="Medical genetics">
                <option value="Neurology">
                <option value="Psychiatry">
                <option value="Radiation oncology">
                <option value="Pediatrics">

              </datalist>

            </div>
          </div>
            <div class="column">
              <div class="card p-4 py-3 text-center">
                <h3><i class="fa-solid fa-school"></i></h3>
                <h3>Previous Experience Details</h3>

                <label for="fName">Previous Company</label>
                <input type="text" class="form-control" id="previousCompany" name="previousCompany" placeholder=""
                  value="" autocomplete="off" >


                <label for="lName">Previous Title</label>
                <input type="text" class="form-control" id="previousTitle" name="previousTitle" placeholder="" value=""
                  autocomplete="off" >







                <label for="dateOfBirth">Internship</label>
                <input type="text" class="form-control" id="internship" name="internship" autocomplete="off">








              </div>

            </div>

            <div style="position: relative; top:500px;">
              <button class="btn btn-primary btn-lg btn-block" type="submit">Save</button>
            </div>
          
      </form>
    </div>
  </div>


  <%- include('partials/footer'); -%>