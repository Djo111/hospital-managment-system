
<%- include('partials/header'); -%>

<div class="main-content2">
    <div class="col-md-12 order-md-1 new-doctor">
        <h2 class="mb-3 title ">Add a new Doctor</h2>

        <form class="needs-validation" action="/newDoctor" method="post">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="fName">First name</label>
              <input type="text" class="form-control" id="fName" name="fName" placeholder="" value="" autocomplete="off" required>
            </div>
            <div class="col-md-6 mb-3">
              <label for="lName">Last name</label>
              <input type="text" class="form-control" id="lName" name="lName" placeholder="" value="" autocomplete="off" required>
          </div>
    
          <div class="mb-3">
            <label for="speciality">Speciality</label>
            <input type="text" class="form-control" name="speciality" placeholder="Speciality" autocomplete="off" required>
          </div>
    
          <div class="mb-3">
            <label for="dateOfBirth">Date Of Birth</label>
            <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" autocomplete="off">
          </div> 
    
          <div class="mb-3">
            <label for="sex">Sexe</label><br>
            <select name="sex" id="sex">
              <option value="Male">Male</option>
              <option value="Female">Female</option>
            </select>
          </div>
    
          <div class="mb-3">
            <label for="phoneNumber">Phone Number</label>
            <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Enter the doctor's phone number" autocomplete="off">
          </div>
          </div>
          <div class="mb-3">
            <label for="salary">Salary</label><br>
            <input type="number" name="salary" id="salary" placeholder="Enter the doctor's salary" autocomplete="off">
          </div>
          <hr class="mb-4">
          <button class="btn btn-primary btn-lg btn-block" type="submit">Save</button>
        </form>
      </div>
    </div>


    <%- include('partials/footer'); -%>