<%- include("partials/header"); -%>

    <div class="col-sm-3 col-md-2 sidebar filter-form">
        <form action="/doctor" method="get">
            <table class="nav nav-sidebar">
                <tr>
                    <td><input type="text" placeholder="Enter First Name" name="fName" autocomplete="off"></td>
                </tr>
                <tr>
                    <td><input type="text" placeholder="Enter Last Name" name="lName" autocomplete="off"></td>
                </tr>
                <tr>
                    <td><input type="text" name="id" placeholder="Enter the ID" autocomplete="off"></td>
                </tr>
                <tr>
                    <td>
                        <div class="d-flex justify-content-between mb-3"> <button class="btn btn-success " type="submit"
                                style="background-color: blue; margin-left: 100px;">Search</button> </div>
                    </td>
                </tr>
                <tr>

                    <td>
                        <div class="d-flex justify-content-between mb-3"> <a id="add-button" href="/newPatient"
                                style="background-color: blue; margin-left: 80px; margin-top: 100px;">Add Patient</a>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>



    <div class="container content mt-5 mb-5">
        <div class="row g-2">
            <% for(let i=0; i<patientsArray.length; i++){%>

                <div class="col-md-3">
                    <div class="card p-2 py-3 text-center">

                        <h4 class="mb-0">
                            <%=patientsArray[i].fName%>
                                <%=patientsArray[i].lName%>
                        </h4>
                        <p class="mb-0 text-muted">Medical Record ID</p>
                                            <h6>
                                                <%=patientsArray[i].medicalRecordID%>
                                            </h6>
                        <div class="mt-4">
                            <div class="mt-4">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <p class="mb-0 text-muted">Date of birth</p>
                                            <h6>
                                                <%=patientsArray[i].dateOfBirth.getDate()+1%>-
                                                    <%=patientsArray[i].dateOfBirth.getMonth()+1%>-
                                                        <%=patientsArray[i].dateOfBirth.getFullYear()%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <p class="mb-0 text-muted">Sexe</p>
                                            <h6>
                                                <%=patientsArray[i].sexe%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <p class="mb-0 text-muted">ID</p>
                                            <h6>
                                                <%=patientsArray[i].patientID%>
                                            </h6>
                                        </div>
                                    </div>
                                    
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <p class="mb-0 text-muted">Phone Number</p>
                                            <h6>
                                                <%=patientsArray[i].phoneNumber%>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="mt-4 apointment">
                                
                                        <button type="button" class="btn btn-success">
                                    <i class="fa-solid fa-history sidebar-icon"></i>
                                    <a class="nav-link" href="/medical_history?medid=<%= patientsArray[i].medicalRecordID %>"><h5>Medical History</h5></a>
                                        </button>
                                </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <%};%>




        </div>


        <%- include("partials/footer"); -%>